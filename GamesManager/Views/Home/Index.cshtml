@using GamesManager.ViewModels;
@model IEnumerable<GamesManager.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Games Manager</h1>
    <table class="table">
        <caption></caption>
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Genre</th>
                <th scope="col">Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GameViewModel item in Model)
            {
                @if(item.Game != null && item.Company != null)
                {
                    <tr>
                        <th scope="row">@item.Game.name</th>
                        <td>@item.Company.name</td>
                        <td>RPG</td>
                        <td>@item.Game.year</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
