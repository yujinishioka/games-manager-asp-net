@using GamesManager.ViewModels;
@model IEnumerable<GamesManager.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Games Manager</h1>
    <table class="table">
        <caption></caption>
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Genre</th>
                <th scope="col">Year</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (GameViewModel item in Model)
            {
                @if(item.Game != null && item.Company != null)
                {                    
                    <tr>
                        <th scope="row">@item.Game.name</th>
                        <td>@item.Company.name</td>
                        <td>
                            <div class="d-flex flex-wrap justify-content-center gap-2">
                                @foreach (GenreModel genre in item.Game.genres)
                                {
                                    var styledGenre = "background-color: gray; color: white;";

                                    if(genre.style != null) {
                                        styledGenre = genre.style;
                                    }
                                    
                                    <div class="rounded px-2" style="@styledGenre">@genre.name</div>
                                }
                            </div>
                        </td>
                        <td>@item.Game.year</td>
                        <td>@item.Game.status</td>
                        <td>Edit</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
